<Window x:Class="GroupAssignment.Search.wndSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GroupAssignment.Search"
        mc:Ignorable="d"
        Title="Select an Invoice" Height="279.52" Width="272.116" Background="#FF428EDA">
    <Grid>
        <ComboBox x:Name="comboBoxInvoices" HorizontalAlignment="Left" Margin="62,40,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBoxInvoices_SelectionChanged"/>
        <Button x:Name="buttonSelect" Content="Select" HorizontalAlignment="Right" Margin="0,0,18,35" VerticalAlignment="Bottom" Width="75" Click="buttonSelect_Click" IsDefault="True" RenderTransformOrigin="2.172,-0.907"/>
        <Button x:Name="buttonCancel" Content="Cancel" HorizontalAlignment="right" Margin="0,0,162,35" VerticalAlignment="Bottom" Width="75" IsCancel="True" Click="buttonCancel_Click" RenderTransformOrigin="3.375,0.597"/>
        <Label x:Name="labelInvoiceNumber" Content="Invoice Number" HorizontalAlignment="Left" Margin="78,10,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
